<style>
  /* Base Styles */
  .cyber-container {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 2rem 1rem;
    font-family: 'Courier New', 'SF Mono', 'Monaco', monospace;
    min-height: 100vh;
  }

  /* Cyber Header */
  .cyber-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.3);
    border-radius: 12px;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }

  .cyber-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.4), transparent);
    animation: scan 4s infinite;
  }

  @keyframes scan {
    100% { left: 100%; }
  }

  /* Glitch Effect */
  .glitch {
    font-size: 3.5rem;
    font-weight: bold;
    text-transform: uppercase;
    position: relative;
    color: #667eea;
    letter-spacing: 0.3em;
    animation: glitch-skew 2s infinite linear alternate-reverse;
  }

  .glitch::before,
  .glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
  }

  .glitch::before {
    animation: glitch-1 0.8s infinite;
    color: #764ba2;
    z-index: -1;
  }

  .glitch::after {
    animation: glitch-2 0.8s infinite;
    color: #f093fb;
    z-index: -2;
  }

  @keyframes glitch-1 {
    0%, 100% { clip-path: inset(0 0 0 0); }
    20% { clip-path: inset(20% 0 30% 0); }
    40% { clip-path: inset(50% 0 20% 0); }
    60% { clip-path: inset(10% 0 60% 0); }
    80% { clip-path: inset(80% 0 5% 0); }
  }

  @keyframes glitch-2 {
    0%, 100% { clip-path: inset(0 0 0 0); transform: translate(0); }
    20% { clip-path: inset(30% 0 40% 0); transform: translate(-2px, 2px); }
    40% { clip-path: inset(10% 0 70% 0); transform: translate(2px, -2px); }
    60% { clip-path: inset(60% 0 20% 0); transform: translate(-2px, 2px); }
    80% { clip-path: inset(5% 0 85% 0); transform: translate(2px, -2px); }
  }

  @keyframes glitch-skew {
    0%, 100% { transform: skew(0deg); }
    20% { transform: skew(-2deg); }
    40% { transform: skew(1deg); }
    60% { transform: skew(-1deg); }
    80% { transform: skew(2deg); }
  }

  /* System Info */
  .system-info {
    margin-top: 1.5rem;
    font-size: 0.9rem;
    line-height: 1.8;
  }

  .system-info p {
    color: #8892b0;
    margin: 0.3rem 0;
  }

  .prompt {
    color: #667eea;
    font-weight: bold;
  }

  .user-highlight {
    color: #ffd700;
    font-weight: bold;
    text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
  }

  .status-online {
    color: #4ade80;
    font-weight: bold;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .role-highlight {
    color: #a78bfa;
    font-weight: bold;
  }

  /* Main Grid */
  .cyber-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  /* Terminal Box */
  .terminal-box {
    background: var(--card-color);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 0 30px rgba(102, 126, 234, 0.2);
  }

  .terminal-header {
    background: linear-gradient(90deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .terminal-prompt {
    color: #667eea;
    font-size: 0.9rem;
    font-weight: bold;
  }

  .terminal-body {
    padding: 1.5rem;
  }

  .cyber-avatar {
    width: 120px;
    height: 120px;
    border-radius: 12px;
    border: 3px solid #667eea;
    margin-bottom: 1.5rem;
    filter: saturate(1.1) contrast(1.1);
    box-shadow: 0 0 25px rgba(102, 126, 234, 0.4);
  }

  /* Terminal Commands */
  .terminal-commands {
    margin: 1.5rem 0;
  }

  .cmd-line {
    margin-bottom: 1rem;
  }

  .cmd-prompt {
    color: #667eea;
    font-weight: bold;
    margin-right: 0.5rem;
    font-size: 1.1rem;
  }

  .cmd-output {
    color: #ffffff;
    margin-top: 0.5rem;
    margin-left: 1.5rem;
    line-height: 1.6;
  }

  /* Status Grid */
  .status-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .status-card {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.3);
    padding: 0.75rem;
    border-radius: 8px;
    text-align: center;
  }

  .status-label {
    display: block;
    font-size: 0.7rem;
    color: #8892b0;
    margin-bottom: 0.3rem;
  }

  .status-value {
    display: block;
    font-size: 0.9rem;
    color: #4ade80;
    font-weight: bold;
  }

  /* Connections */
  .connections-list {
    color: #8892b0;
    margin-top: 0.5rem;
    margin-left: 1.5rem;
  }

  .connections-list div {
    margin-bottom: 0.3rem;
  }

  .connected {
    color: #4ade80;
    font-weight: bold;
  }

  /* Social Grid */
  .social-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-btn {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.3);
    padding: 0.75rem;
    border-radius: 8px;
    color: #667eea;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s;
  }

  .social-btn:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    color: #764ba2;
  }

  /* Right Panels */
  .right-panels {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Neural Interface */
  .neural-interface {
    background: var(--card-color);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .neural-interface::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, #667eea, transparent);
    animation: scan-line 3s infinite;
  }

  @keyframes scan-line {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(100px); }
  }

  .neural-header h3 {
    color: #ffd700;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .code-comment {
    color: #5c6370;
    font-style: italic;
    font-size: 0.85rem;
  }

  .connection-status {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.3);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    color: #4ade80;
    font-weight: bold;
    text-align: center;
    margin: 1rem 0;
    animation: connection-pulse 2s infinite;
  }

  @keyframes connection-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(102, 126, 234, 0.4); }
    50% { box-shadow: 0 0 20px 5px rgba(102, 126, 234, 0.4); }
  }

  .user-line {
    color: #a78bfa;
    font-weight: bold;
    font-size: 1.1rem;
  }

  /* Panels Grid */
  .panels-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  /* Data Panel */
  .data-panel {
    background: var(--card-color);
    border: 1px solid var(--border-color);
    border-radius: 12px;
    overflow: hidden;
  }

  .panel-header {
    background: linear-gradient(90deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    padding: 0.75rem;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .panel-header h3 {
    color: #667eea;
    font-size: 0.85rem;
    margin: 0;
  }

  /* JSON Data */
  .json-data, .config-data {
    padding: 1rem;
  }

  .json-item, .config-item {
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .json-item:hover, .config-item:hover {
    transform: translateX(5px);
  }

  .json-arrow {
    color: #667eea;
    margin-right: 0.5rem;
  }

  .json-key {
    color: #c678dd;
  }

  .json-value {
    color: #98c379;
  }

  .config-symbol {
    color: #667eea;
    margin-right: 0.5rem;
  }

  .config-key {
    color: #e06c75;
  }

  .config-value {
    color: #56b6c2;
  }

  /* Access Portal */
  .access-portal {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05), rgba(118, 75, 162, 0.05));
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }

  .portal-header {
    color: #667eea;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .portal-prompt {
    font-weight: bold;
  }

  .access-granted {
    color: #ffd700;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 1rem 0;
    letter-spacing: 0.2em;
    text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
  }

  .portal-comment {
    color: #5c6370;
    font-style: italic;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
  }

  .portal-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .portal-btn {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
    border: 1px solid rgba(102, 126, 234, 0.3);
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    color: #667eea;
    text-decoration: none;
    transition: all 0.3s;
    font-size: 0.9rem;
  }

  .portal-btn:hover {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(118, 75, 162, 0.2));
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    color: #764ba2;
  }

  .portal-btn span {
    font-weight: bold;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cyber-grid {
      grid-template-columns: 1fr;
    }

    .panels-grid {
      grid-template-columns: 1fr;
    }

    .glitch {
      font-size: 2rem;
    }

    .portal-links {
      flex-direction: column;
    }
  }
</style>