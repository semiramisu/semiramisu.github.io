---
import MainLayout from "../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";

// Get language from URL parameter
const url = new URL(Astro.request.url);
const lang = (url.searchParams.get('lang') === 'en' ? 'en' : 'ja') as "ja" | "en";
---

<MainLayout title={lang === 'ja' ? "自己紹介" : "About Me"}>
  <div class="cyber-container">
    <!-- Cyber Header -->
    <div class="cyber-header">
      <h1 class="glitch" data-text="ABOUT.APP">ABOUT.APP</h1>
      <div class="system-info">
        <p>
          <span class="prompt">></span> SYSTEM_USER: 
          <span class="user-highlight">semiramisu</span>
        </p>
        <p>
          <span class="prompt">></span> STATUS: 
          <span class="status-online">ONLINE</span>
        </p>
        <p>
          <span class="prompt">></span> ROLE: 
          <span class="role-highlight">RESEARCHER | ENGINEER | TECH_BLOGGER</span>
        </p>
      </div>
    </div>

    <!-- Main Grid -->
    <div class="cyber-grid">
      <!-- Left Terminal -->
      <div class="terminal-box">
        <div class="terminal-header">
          <span class="terminal-prompt">user@terminal:~$</span>
        </div>
        
        <div class="terminal-body">
          <img src="/icon.jpg" alt="Profile" class="cyber-avatar" />
          
          <div class="terminal-commands">
            <div class="cmd-line">
              <span class="cmd-prompt">$</span> whoami
              <div class="cmd-output">semiramisu</div>
            </div>
            
            <div class="cmd-line">
              <span class="cmd-prompt">$</span> cat role.txt
              <div class="cmd-output">
                Natural_Language_Processing.app<br/>
                Health_Data_Analysis.app
              </div>
            </div>
          </div>

          <div class="status-grid">
            <div class="status-card">
              <span class="status-label">RESEARCH</span>
              <span class="status-value">ACTIVE</span>
            </div>
            <div class="status-card">
              <span class="status-label">BLOG</span>
              <span class="status-value">UPDATING</span>
            </div>
          </div>

          <div class="terminal-commands">
            <div class="cmd-line">
              <span class="cmd-prompt">$</span> netstat -connections
              <div class="connections-list">
                <div>tcp://github.com <span class="connected">[CONNECTED]</span></div>
                <div>tcp://x.com <span class="connected">[CONNECTED]</span></div>
              </div>
            </div>
          </div>

          <div class="social-grid">
            <a href="https://github.com/semiramisu" target="_blank" class="social-btn">
              <Icon name="line-md:github-loop" />
              <span>GitHub</span>
            </a>
            <a href="https://x.com/semiramisuWeb3" target="_blank" class="social-btn">
              <Icon name="line-md:twitter-x" />
              <span>X</span>
            </a>
          </div>
        </div>
      </div>

      <!-- Right Panels -->
      <div class="right-panels">
        <!-- Neural Interface -->
        <div class="neural-interface">
          <div class="neural-header">
            <h3>⚡ NEURAL_INTERFACE.APP</h3>
            <p class="code-comment">// Initialize quantum communication protocol</p>
          </div>
          <div class="connection-status">
            CONNECTION_ESTABLISHED
          </div>
          <div class="user-line">USER://</div>
        </div>

        <!-- Skills and Config Grid -->
        <div class="panels-grid">
          <!-- Tech Skills -->
          <div class="data-panel">
            <div class="panel-header">
              <Icon name="heroicons:cpu-chip" />
              <h3>TECH_SKILLS.JSON</h3>
            </div>
            <div class="json-data">
              <div class="json-item">
                <span class="json-arrow">></span>
                <span class="json-key">"research":</span>
                <span class="json-value">["NLP", "Health_Data", "ML"]</span>
              </div>
              <div class="json-item">
                <span class="json-arrow">></span>
                <span class="json-key">"languages":</span>
                <span class="json-value">["Python", "JavaScript", "R"]</span>
              </div>
              <div class="json-item">
                <span class="json-arrow">></span>
                <span class="json-key">"publications":</span>
                <span class="json-value">4</span>
              </div>
            </div>
          </div>

          <!-- Personal Config -->
          <div class="data-panel">
            <div class="panel-header">
              <Icon name="heroicons:cog-6-tooth" />
              <h3>PERSONAL.CFG</h3>
            </div>
            <div class="config-data">
              <div class="config-item">
                <span class="config-symbol">$</span>
                <span class="config-key">music:</span>
                <span class="config-value">["Piano", "Guitar"]</span>
              </div>
              <div class="config-item">
                <span class="config-symbol">$</span>
                <span class="config-key">sports:</span>
                <span class="config-value">["Baseball", "Swimming"]</span>
              </div>
              <div class="config-item">
                <span class="config-symbol">$</span>
                <span class="config-key">philosophy:</span>
                <span class="config-value">"音楽は聞くものじゃなく自分でやるもの"</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Access Portal -->
        <div class="access-portal">
          <div class="portal-header">
            <span class="portal-prompt">></span> QUANTUM_PORTAL_INITIALIZED
          </div>
          <h3 class="access-granted">ACCESS_GRANTED</h3>
          <p class="portal-comment">// Navigate through the digital matrix</p>
          <div class="portal-links">
            <a href="/" class="portal-btn">
              <span>></span> HOME.APP
            </a>
            <a href="/archive" class="portal-btn">
              <span>></span> ARCHIVE.SH
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Base Styles */
  .cyber-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
    font-family: 'Courier New', 'SF Mono', 'Monaco', monospace;
    background: #0a0e1a;
    min-height: 100vh;
  }

  /* Cyber Header */
  .cyber-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem;
    background: linear-gradient(135deg, rgba(138, 43, 226, 0.1), rgba(0, 255, 136, 0.1));
    border: 1px solid rgba(138, 43, 226, 0.3);
    border-radius: 8px;
    position: relative;
    overflow: hidden;
  }

  .cyber-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(138, 43, 226, 0.4), transparent);
    animation: scan 3s infinite;
  }

  @keyframes scan {
    100% { left: 100%; }
  }

  /* Glitch Effect */
  .glitch {
    font-size: 3rem;
    font-weight: bold;
    text-transform: uppercase;
    position: relative;
    color: #00ff88;
    letter-spacing: 0.2em;
    animation: glitch-skew 1s infinite linear alternate-reverse;
  }

  .glitch::before,
  .glitch::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
  }

  .glitch::before {
    animation: glitch-1 0.5s infinite;
    color: #00ffff;
    z-index: -1;
  }

  .glitch::after {
    animation: glitch-2 0.5s infinite;
    color: #ff00ff;
    z-index: -2;
  }

  @keyframes glitch-1 {
    0%, 100% { clip-path: inset(0 0 0 0); }
    20% { clip-path: inset(20% 0 30% 0); }
    40% { clip-path: inset(50% 0 20% 0); }
    60% { clip-path: inset(10% 0 60% 0); }
    80% { clip-path: inset(80% 0 5% 0); }
  }

  @keyframes glitch-2 {
    0%, 100% { clip-path: inset(0 0 0 0); transform: translate(0); }
    20% { clip-path: inset(30% 0 40% 0); transform: translate(-2px, 2px); }
    40% { clip-path: inset(10% 0 70% 0); transform: translate(2px, -2px); }
    60% { clip-path: inset(60% 0 20% 0); transform: translate(-2px, 2px); }
    80% { clip-path: inset(5% 0 85% 0); transform: translate(2px, -2px); }
  }

  @keyframes glitch-skew {
    0%, 100% { transform: skew(0deg); }
    20% { transform: skew(-2deg); }
    40% { transform: skew(1deg); }
    60% { transform: skew(-1deg); }
    80% { transform: skew(2deg); }
  }

  /* System Info */
  .system-info {
    margin-top: 1.5rem;
    font-size: 0.9rem;
    line-height: 1.8;
  }

  .system-info p {
    color: #8892b0;
    margin: 0.3rem 0;
  }

  .prompt {
    color: #00ff88;
    font-weight: bold;
  }

  .user-highlight {
    color: #ffd700;
    font-weight: bold;
    text-shadow: 0 0 10px rgba(255, 215, 0, 0.5);
  }

  .status-online {
    color: #00ff88;
    font-weight: bold;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .role-highlight {
    color: #00ffff;
    font-weight: bold;
  }

  /* Main Grid */
  .cyber-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  /* Terminal Box */
  .terminal-box {
    background: #0f1419;
    border: 1px solid #2a2e3e;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 0 20px rgba(138, 43, 226, 0.3);
  }

  .terminal-header {
    background: #1a1f29;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #2a2e3e;
  }

  .terminal-prompt {
    color: #00ff88;
    font-size: 0.9rem;
    font-weight: bold;
  }

  .terminal-body {
    padding: 1.5rem;
  }

  .cyber-avatar {
    width: 120px;
    height: 120px;
    border-radius: 8px;
    border: 2px solid #00ff88;
    margin-bottom: 1.5rem;
    filter: saturate(0.8) contrast(1.2);
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
  }

  /* Terminal Commands */
  .terminal-commands {
    margin: 1.5rem 0;
  }

  .cmd-line {
    margin-bottom: 1rem;
  }

  .cmd-prompt {
    color: #00ff88;
    font-weight: bold;
    margin-right: 0.5rem;
  }

  .cmd-output {
    color: #ffffff;
    margin-top: 0.5rem;
    margin-left: 1.5rem;
    line-height: 1.6;
  }

  /* Status Grid */
  .status-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .status-card {
    background: rgba(138, 43, 226, 0.1);
    border: 1px solid rgba(138, 43, 226, 0.3);
    padding: 0.75rem;
    border-radius: 4px;
    text-align: center;
  }

  .status-label {
    display: block;
    font-size: 0.7rem;
    color: #8892b0;
    margin-bottom: 0.3rem;
  }

  .status-value {
    display: block;
    font-size: 0.9rem;
    color: #00ff88;
    font-weight: bold;
  }

  /* Connections */
  .connections-list {
    color: #8892b0;
    margin-top: 0.5rem;
    margin-left: 1.5rem;
  }

  .connections-list div {
    margin-bottom: 0.3rem;
  }

  .connected {
    color: #00ff88;
    font-weight: bold;
  }

  /* Social Grid */
  .social-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-btn {
    background: rgba(0, 255, 136, 0.1);
    border: 1px solid rgba(0, 255, 136, 0.3);
    padding: 0.75rem;
    border-radius: 4px;
    color: #00ff88;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    transition: all 0.3s;
  }

  .social-btn:hover {
    background: rgba(0, 255, 136, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 255, 136, 0.3);
  }

  /* Right Panels */
  .right-panels {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Neural Interface */
  .neural-interface {
    background: linear-gradient(135deg, #1a1f29, #0f1419);
    border: 1px solid #2a2e3e;
    border-radius: 8px;
    padding: 1.5rem;
    position: relative;
    overflow: hidden;
  }

  .neural-interface::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, #00ff88, transparent);
    animation: scan-line 2s infinite;
  }

  @keyframes scan-line {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(100px); }
  }

  .neural-header h3 {
    color: #ffd700;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
  }

  .code-comment {
    color: #5c6370;
    font-style: italic;
    font-size: 0.85rem;
  }

  .connection-status {
    background: rgba(0, 255, 136, 0.1);
    border: 1px solid rgba(0, 255, 136, 0.3);
    padding: 0.5rem 1rem;
    border-radius: 4px;
    color: #00ff88;
    font-weight: bold;
    text-align: center;
    margin: 1rem 0;
    animation: connection-pulse 2s infinite;
  }

  @keyframes connection-pulse {
    0%, 100% { box-shadow: 0 0 0 0 rgba(0, 255, 136, 0.4); }
    50% { box-shadow: 0 0 20px 5px rgba(0, 255, 136, 0.4); }
  }

  .user-line {
    color: #00ffff;
    font-weight: bold;
    font-size: 1.1rem;
  }

  /* Panels Grid */
  .panels-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  /* Data Panel */
  .data-panel {
    background: #0f1419;
    border: 1px solid #2a2e3e;
    border-radius: 8px;
    overflow: hidden;
  }

  .panel-header {
    background: #1a1f29;
    padding: 0.75rem;
    border-bottom: 1px solid #2a2e3e;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .panel-header h3 {
    color: #00ff88;
    font-size: 0.85rem;
    margin: 0;
  }

  /* JSON Data */
  .json-data, .config-data {
    padding: 1rem;
  }

  .json-item, .config-item {
    margin-bottom: 0.5rem;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .json-item:hover, .config-item:hover {
    transform: translateX(5px);
  }

  .json-arrow {
    color: #00ff88;
    margin-right: 0.5rem;
  }

  .json-key {
    color: #c678dd;
  }

  .json-value {
    color: #98c379;
  }

  .config-symbol {
    color: #00ff88;
    margin-right: 0.5rem;
  }

  .config-key {
    color: #e06c75;
  }

  .config-value {
    color: #56b6c2;
  }

  /* Access Portal */
  .access-portal {
    background: linear-gradient(135deg, rgba(0, 255, 136, 0.05), rgba(138, 43, 226, 0.05));
    border: 1px solid #2a2e3e;
    border-radius: 8px;
    padding: 1.5rem;
    text-align: center;
  }

  .portal-header {
    color: #00ff88;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .portal-prompt {
    font-weight: bold;
  }

  .access-granted {
    color: #ffd700;
    font-size: 1.5rem;
    font-weight: bold;
    margin: 1rem 0;
    letter-spacing: 0.2em;
    text-shadow: 0 0 20px rgba(255, 215, 0, 0.5);
  }

  .portal-comment {
    color: #5c6370;
    font-style: italic;
    font-size: 0.85rem;
    margin-bottom: 1.5rem;
  }

  .portal-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .portal-btn {
    background: rgba(138, 43, 226, 0.1);
    border: 1px solid rgba(138, 43, 226, 0.3);
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    color: #00ff88;
    text-decoration: none;
    transition: all 0.3s;
    font-size: 0.9rem;
  }

  .portal-btn:hover {
    background: rgba(138, 43, 226, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(138, 43, 226, 0.3);
  }

  .portal-btn span {
    font-weight: bold;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cyber-grid {
      grid-template-columns: 1fr;
    }

    .panels-grid {
      grid-template-columns: 1fr;
    }

    .glitch {
      font-size: 2rem;
    }

    .portal-links {
      flex-direction: column;
    }
  }
</style>