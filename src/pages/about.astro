---
import MainLayout from "../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";

// Get language from URL parameter
const url = new URL(Astro.request.url);
const lang = (url.searchParams.get('lang') === 'en' ? 'en' : 'ja') as "ja" | "en";
---

<MainLayout title={lang === 'ja' ? "自己紹介" : "About Me"}>
  <div class="terminal-container">
    <!-- Terminal Header -->
    <div class="terminal-header">
      <div class="terminal-title">
        <h1>ABOUT.APP</h1>
        <div class="terminal-status">
          <span class="status-line">> SYSTEM_USER: <span class="highlight">semiramisu</span></span>
          <span class="status-line">> STATUS: <span class="status-online">ONLINE</span></span>
          <span class="status-line">> ROLE: <span class="highlight">RESEARCHER | ENGINEER | TECH_BLOGGER</span></span>
        </div>
      </div>
    </div>

    <!-- Main Terminal Content -->
    <div class="terminal-content">
      <!-- Left Panel - Profile Terminal -->
      <div class="terminal-panel main-panel">
        <div class="terminal-window">
          <div class="window-header">
            <span class="prompt">user@semiramisu:~$</span>
          </div>
          
          <div class="profile-section">
            <img src="/icon.jpg" alt="Profile" class="profile-image" />
            
            <div class="command-output">
              <div class="command-line">
                <span class="prompt">$</span> <span class="command">whoami</span>
                <div class="output">semiramisu | 99年生まれ</div>
              </div>
              
              <div class="command-line">
                <span class="prompt">$</span> <span class="command">cat role.txt</span>
                <div class="output">
                  Natural_Language_Processing.app<br/>
                  Health_Data_Analysis.app<br/>
                  Machine_Learning_Engineer.app
                </div>
              </div>
            </div>

            <div class="status-badges">
              <div class="badge badge-active">
                <span class="badge-label">RESEARCH</span>
                <span class="badge-value">ACTIVE</span>
              </div>
              <div class="badge badge-update">
                <span class="badge-label">BLOG</span>
                <span class="badge-value">UPDATING</span>
              </div>
            </div>

            <div class="command-line">
              <span class="prompt">$</span> <span class="command">netstat -connections</span>
              <div class="connections">
                <div class="connection-item">
                  tcp://github.com <span class="connected">[CONNECTED]</span>
                </div>
                <div class="connection-item">
                  tcp://x.com <span class="connected">[CONNECTED]</span>
                </div>
                <div class="connection-item">
                  tcp://ieee.org <span class="connected">[CONNECTED]</span>
                </div>
              </div>
            </div>

            <div class="social-links">
              <a href="https://github.com/semiramisu" target="_blank" class="social-icon">
                <Icon name="line-md:github-loop" />
              </a>
              <a href="https://x.com/semiramisuWeb3" target="_blank" class="social-icon">
                <Icon name="line-md:twitter-x" />
              </a>
              <a href="mailto:semiramisuweb3@gmail.com" class="social-icon">
                <Icon name="heroicons:envelope" />
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Panel - Skills & Info -->
      <div class="terminal-panel side-panel">
        <!-- Skills Terminal -->
        <div class="terminal-window skills-window">
          <div class="window-header">
            <Icon name="heroicons:cpu-chip" class="header-icon" />
            <h3>TECH_SKILLS.JSON</h3>
          </div>
          <div class="json-content">
            <div class="json-line">
              <span class="json-key">"research":</span> 
              <span class="json-value">["NLP", "Health_Data", "ML", "DL"]</span>
            </div>
            <div class="json-line">
              <span class="json-key">"languages":</span> 
              <span class="json-value">["Python", "JavaScript", "TypeScript", "R"]</span>
            </div>
            <div class="json-line">
              <span class="json-key">"frameworks":</span> 
              <span class="json-value">["PyTorch", "TensorFlow", "Astro"]</span>
            </div>
            <div class="json-line">
              <span class="json-key">"publications":</span> 
              <span class="json-value">4</span>
            </div>
            <div class="json-line">
              <span class="json-key">"ieee_papers":</span> 
              <span class="json-value">true</span>
            </div>
          </div>
        </div>

        <!-- Personal Config -->
        <div class="terminal-window config-window">
          <div class="window-header">
            <Icon name="heroicons:cog" class="header-icon" />
            <h3>PERSONAL.CFG</h3>
          </div>
          <div class="config-content">
            <div class="config-line">
              <span class="config-key">$</span> music: 
              <span class="config-value">["Piano", "Guitar", "Violin_planned"]</span>
            </div>
            <div class="config-line">
              <span class="config-key">$</span> sports: 
              <span class="config-value">["Baseball", "Swimming"]</span>
            </div>
            <div class="config-line">
              <span class="config-key">$</span> activities: 
              <span class="config-value">["Boy_Scouts", "Theater"]</span>
            </div>
            <div class="config-line">
              <span class="config-key">$</span> favorite_artists: 
              <span class="config-value">["Vocaloid", "Classical", "Beatles"]</span>
            </div>
            <div class="config-line">
              <span class="config-key">$</span> philosophy: 
              <span class="config-value">"音楽は聞くものじゃなく自分でやるもの"</span>
            </div>
          </div>
        </div>

        <!-- Publications Terminal -->
        <div class="terminal-window publications-window">
          <div class="window-header">
            <Icon name="heroicons:academic-cap" class="header-icon" />
            <h3>PUBLICATIONS.LOG</h3>
          </div>
          <div class="log-content">
            <div class="log-entry">
              <span class="log-date">[2024]</span> 
              <a href="https://www.tandfonline.com/doi/abs/10.1080/12460125.2024.2440024" target="_blank" class="log-link">
                ChatGPT + Deep Learning Research
              </a>
            </div>
            <div class="log-entry">
              <span class="log-date">[2023]</span> 
              <a href="https://ieeexplore.ieee.org/document/10086337" target="_blank" class="log-link">
                Emotion Classification @ IEEE
              </a>
            </div>
            <div class="log-entry">
              <span class="log-date">[2022]</span> 
              <a href="https://ieeexplore.ieee.org/document/9929542" target="_blank" class="log-link">
                Screen Time Analysis @ IEEE
              </a>
            </div>
            <div class="log-entry">
              <span class="log-date">[2024]</span> 
              <a href="https://ieeexplore.ieee.org/document/10505450" target="_blank" class="log-link">
                VR Relaxation Study (Co-author)
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Access Panel -->
    <div class="access-panel">
      <div class="access-content">
        <span class="access-prompt">></span> QUANTUM_PORTAL_INITIALIZED
        <h3>ACCESS_GRANTED</h3>
        <p>// Navigate through the digital matrix</p>
        <div class="portal-links">
          <a href="/" class="portal-link">
            <span>></span> HOME.APP
          </a>
          <a href="/archive" class="portal-link">
            <span>></span> ARCHIVE.SH
          </a>
          <a href="/contact" class="portal-link">
            <span>></span> CONTACT.EXE
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Terminal Container */
  .terminal-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
    font-family: 'Courier New', monospace;
  }

  /* Terminal Header */
  .terminal-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 2rem;
    border-radius: 12px 12px 0 0;
    margin-bottom: 2rem;
  }

  .terminal-title h1 {
    font-size: 2.5rem;
    font-weight: bold;
    color: white;
    margin-bottom: 1rem;
    letter-spacing: 0.1em;
  }

  .terminal-status {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .status-line {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
  }

  .highlight {
    color: #ffd700;
    font-weight: bold;
  }

  .status-online {
    color: #00ff00;
    font-weight: bold;
    animation: blink 2s infinite;
  }

  /* Main Content */
  .terminal-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  /* Terminal Windows */
  .terminal-window {
    background: #1a1a2e;
    border: 1px solid #16213e;
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .window-header {
    background: #0f3460;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #16213e;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .window-header h3 {
    color: #00ff88;
    font-size: 0.9rem;
    font-weight: bold;
    margin: 0;
  }

  .header-icon {
    width: 1.2rem;
    height: 1.2rem;
    color: #00ff88;
  }

  .prompt {
    color: #00ff88;
    font-weight: bold;
  }

  /* Profile Section */
  .profile-section {
    padding: 1.5rem;
  }

  .profile-image {
    width: 120px;
    height: 120px;
    border-radius: 8px;
    border: 3px solid #00ff88;
    margin-bottom: 1.5rem;
  }

  .command-line {
    margin-bottom: 1.5rem;
  }

  .command {
    color: #ffd700;
    margin-left: 0.5rem;
  }

  .output {
    color: #ffffff;
    margin-top: 0.5rem;
    margin-left: 2rem;
    line-height: 1.6;
  }

  /* Status Badges */
  .status-badges {
    display: flex;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .badge {
    padding: 0.5rem 1rem;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .badge-active {
    background: rgba(0, 255, 136, 0.1);
    border: 1px solid #00ff88;
  }

  .badge-update {
    background: rgba(255, 215, 0, 0.1);
    border: 1px solid #ffd700;
  }

  .badge-label {
    font-size: 0.7rem;
    color: #888;
  }

  .badge-value {
    font-size: 0.9rem;
    color: #fff;
    font-weight: bold;
  }

  /* Connections */
  .connections {
    margin-top: 0.5rem;
    margin-left: 2rem;
  }

  .connection-item {
    color: #888;
    margin-bottom: 0.3rem;
  }

  .connected {
    color: #00ff88;
    font-weight: bold;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .social-icon {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    color: #fff;
    transition: all 0.3s;
  }

  .social-icon:hover {
    background: #00ff88;
    color: #1a1a2e;
    transform: translateY(-2px);
  }

  /* JSON Content */
  .json-content, .config-content, .log-content {
    padding: 1rem;
    color: #fff;
  }

  .json-line, .config-line, .log-entry {
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
  }

  .json-key {
    color: #ff79c6;
  }

  .json-value {
    color: #50fa7b;
  }

  .config-key {
    color: #00ff88;
  }

  .config-value {
    color: #8be9fd;
  }

  .log-date {
    color: #ffd700;
    margin-right: 0.5rem;
  }

  .log-link {
    color: #8be9fd;
    text-decoration: none;
    transition: color 0.3s;
  }

  .log-link:hover {
    color: #00ff88;
    text-decoration: underline;
  }

  /* Access Panel */
  .access-panel {
    background: linear-gradient(135deg, #0f3460 0%, #16213e 100%);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
  }

  .access-content {
    color: #fff;
  }

  .access-prompt {
    color: #00ff88;
    font-size: 1.2rem;
  }

  .access-panel h3 {
    color: #ffd700;
    font-size: 1.8rem;
    margin: 1rem 0;
    letter-spacing: 0.2em;
  }

  .access-panel p {
    color: #888;
    font-style: italic;
    margin-bottom: 1.5rem;
  }

  .portal-links {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .portal-link {
    padding: 0.75rem 1.5rem;
    background: rgba(0, 255, 136, 0.1);
    border: 1px solid #00ff88;
    border-radius: 4px;
    color: #00ff88;
    text-decoration: none;
    transition: all 0.3s;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .portal-link:hover {
    background: #00ff88;
    color: #1a1a2e;
    transform: translateY(-2px);
  }

  .portal-link span {
    font-weight: bold;
  }

  /* Animations */
  @keyframes blink {
    0%, 50%, 100% { opacity: 1; }
    25%, 75% { opacity: 0.5; }
  }

  /* Responsive */
  @media (max-width: 968px) {
    .terminal-content {
      grid-template-columns: 1fr;
    }

    .terminal-title h1 {
      font-size: 1.8rem;
    }

    .portal-links {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (max-width: 640px) {
    .terminal-container {
      padding: 1rem 0.5rem;
    }

    .status-badges {
      flex-direction: column;
    }

    .social-links {
      justify-content: center;
    }
  }
</style>