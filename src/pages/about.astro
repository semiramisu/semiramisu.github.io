---
import MainLayout from "../layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";

// Get language from URL parameter
const url = new URL(Astro.request.url);
const lang = (url.searchParams.get('lang') === 'en' ? 'en' : 'ja') as "ja" | "en";

// Profile data
const profile = {
  name: "Semiramisu",
  title: lang === 'ja' ? "研究者 / エンジニア" : "Researcher / Engineer",
  bio: lang === 'ja' 
    ? "自然言語処理と健康データ分析を専門とする研究者。技術と人間の健康の交差点で新しい価値を創造することに情熱を注いでいます。"
    : "Researcher specializing in Natural Language Processing and Health Data Analysis. Passionate about creating new value at the intersection of technology and human health.",
  location: lang === 'ja' ? "日本" : "Japan",
  birthYear: "1999"
};

// Skills and Technologies
const skills = {
  research: ["自然言語処理", "健康データ分析", "機械学習", "深層学習"],
  programming: ["Python", "JavaScript", "TypeScript", "R"],
  frameworks: ["PyTorch", "TensorFlow", "Astro", "React", "Svelte"],
  tools: ["Git", "Docker", "AWS", "Jupyter", "VSCode"],
  databases: ["PostgreSQL", "MongoDB", "Redis"]
};

// Publications
const publications = {
  international: [
    {
      title: "Influence Analysis of the Screen Time on Daily Exercise Based on the Personal Activity Factor Model",
      conference: "IEEE Conference",
      year: "2022",
      link: "https://ieeexplore.ieee.org/document/9929542"
    },
    {
      title: "Improving Emotion Classification by a Combination of Personal Texts and Social Big Data Based on Naive Bayes",
      conference: "IEEE Conference",
      year: "2023",
      link: "https://ieeexplore.ieee.org/document/10086337"
    }
  ],
  journal: [
    {
      title: "Improving emotion estimation through a combination of ChatGPT and deep learning",
      journal: "Taylor & Francis",
      year: "2024",
      link: "https://www.tandfonline.com/doi/abs/10.1080/12460125.2024.2440024"
    }
  ],
  coauthor: [
    {
      title: "Comparative Analysis of Relaxation Effects through Natural Experiences Using a VR Device",
      conference: "IEEE Conference",
      year: "2024",
      link: "https://ieeexplore.ieee.org/document/10505450"
    }
  ]
};

// Hobbies and interests
const interests = {
  sports: ["野球", "水泳"],
  music: ["ピアノ", "ギター", "ヴァイオリン（予定）"],
  artists: ["ボーカロイド", "クラシック", "The Beatles", "甲本ヒロト", "宮本浩次", "井上陽水"],
  activities: ["ボーイスカウト", "演劇"]
};

// Timeline data
const timeline = [
  { year: "1999", event: lang === 'ja' ? "誕生" : "Born" },
  { year: "2022", event: lang === 'ja' ? "IEEE国際会議で初の論文発表" : "First paper at IEEE Conference" },
  { year: "2023", event: lang === 'ja' ? "感情分類研究で成果発表" : "Emotion Classification Research Published" },
  { year: "2024", event: lang === 'ja' ? "ChatGPTと深層学習の融合研究" : "ChatGPT + Deep Learning Research" }
];
---

<MainLayout title={lang === 'ja' ? "自己紹介" : "About Me"}>
  <div class="about-container">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="profile-card">
        <div class="avatar-container">
          <img src="/icon.jpg" alt="Profile" class="avatar" />
          <div class="status-badge">
            <span class="status-dot"></span>
            {lang === 'ja' ? 'オンライン' : 'Online'}
          </div>
        </div>
        <div class="profile-info">
          <h1 class="profile-name">{profile.name}</h1>
          <p class="profile-title">{profile.title}</p>
          <p class="profile-bio">{profile.bio}</p>
          <div class="profile-meta">
            <span class="meta-item">
              <Icon name="heroicons:map-pin" class="icon" />
              {profile.location}
            </span>
            <span class="meta-item">
              <Icon name="heroicons:cake" class="icon" />
              Born {profile.birthYear}
            </span>
          </div>
          <div class="social-links">
            <a href="https://github.com/semiramisu" target="_blank" class="social-link">
              <Icon name="line-md:github-loop" class="social-icon" />
            </a>
            <a href="https://x.com/semiramisuWeb3" target="_blank" class="social-link">
              <Icon name="line-md:twitter-x" class="social-icon" />
            </a>
            <a href="mailto:semiramisuweb3@gmail.com" class="social-link">
              <Icon name="heroicons:envelope" class="social-icon" />
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="skills-section">
      <h2 class="section-title">
        <Icon name="heroicons:code-bracket" class="title-icon" />
        {lang === 'ja' ? 'スキル & 技術スタック' : 'Skills & Tech Stack'}
      </h2>
      <div class="skills-grid">
        <div class="skill-category">
          <h3 class="category-title">{lang === 'ja' ? '研究分野' : 'Research'}</h3>
          <div class="skill-tags">
            {skills.research.map(skill => (
              <span class="skill-tag research">{skill}</span>
            ))}
          </div>
        </div>
        <div class="skill-category">
          <h3 class="category-title">{lang === 'ja' ? 'プログラミング言語' : 'Programming'}</h3>
          <div class="skill-tags">
            {skills.programming.map(skill => (
              <span class="skill-tag programming">{skill}</span>
            ))}
          </div>
        </div>
        <div class="skill-category">
          <h3 class="category-title">{lang === 'ja' ? 'フレームワーク' : 'Frameworks'}</h3>
          <div class="skill-tags">
            {skills.frameworks.map(skill => (
              <span class="skill-tag framework">{skill}</span>
            ))}
          </div>
        </div>
        <div class="skill-category">
          <h3 class="category-title">{lang === 'ja' ? 'ツール' : 'Tools'}</h3>
          <div class="skill-tags">
            {skills.tools.map(skill => (
              <span class="skill-tag tool">{skill}</span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Timeline Section -->
    <section class="timeline-section">
      <h2 class="section-title">
        <Icon name="heroicons:clock" class="title-icon" />
        {lang === 'ja' ? 'タイムライン' : 'Timeline'}
      </h2>
      <div class="timeline">
        {timeline.map((item, index) => (
          <div class="timeline-item">
            <div class="timeline-dot"></div>
            <div class="timeline-content">
              <span class="timeline-year">{item.year}</span>
              <p class="timeline-event">{item.event}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Publications Section -->
    <section class="publications-section">
      <h2 class="section-title">
        <Icon name="heroicons:academic-cap" class="title-icon" />
        {lang === 'ja' ? '研究業績' : 'Publications'}
      </h2>
      
      <div class="pub-category">
        <h3 class="pub-title">{lang === 'ja' ? '筆頭論文 - 国際会議' : 'First Author - International Conferences'}</h3>
        <div class="pub-list">
          {publications.international.map(pub => (
            <div class="pub-item">
              <a href={pub.link} target="_blank" class="pub-link">
                <h4 class="pub-name">{pub.title}</h4>
                <div class="pub-meta">
                  <span>{pub.conference}</span>
                  <span class="pub-year">{pub.year}</span>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>

      <div class="pub-category">
        <h3 class="pub-title">{lang === 'ja' ? 'ジャーナル（特別号）' : 'Journal Papers'}</h3>
        <div class="pub-list">
          {publications.journal.map(pub => (
            <div class="pub-item">
              <a href={pub.link} target="_blank" class="pub-link">
                <h4 class="pub-name">{pub.title}</h4>
                <div class="pub-meta">
                  <span>{pub.journal}</span>
                  <span class="pub-year">{pub.year}</span>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>

      <div class="pub-category">
        <h3 class="pub-title">{lang === 'ja' ? '共著論文' : 'Co-authored Papers'}</h3>
        <div class="pub-list">
          {publications.coauthor.map(pub => (
            <div class="pub-item">
              <a href={pub.link} target="_blank" class="pub-link">
                <h4 class="pub-name">{pub.title}</h4>
                <div class="pub-meta">
                  <span>{pub.conference}</span>
                  <span class="pub-year">{pub.year}</span>
                </div>
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Interests Section -->
    <section class="interests-section">
      <h2 class="section-title">
        <Icon name="heroicons:heart" class="title-icon" />
        {lang === 'ja' ? '趣味・興味' : 'Hobbies & Interests'}
      </h2>
      <div class="interests-grid">
        <div class="interest-card">
          <h3 class="interest-title">
            <Icon name="heroicons:trophy" class="interest-icon" />
            {lang === 'ja' ? 'スポーツ' : 'Sports'}
          </h3>
          <p>{interests.sports.join('、')}</p>
        </div>
        <div class="interest-card">
          <h3 class="interest-title">
            <Icon name="heroicons:musical-note" class="interest-icon" />
            {lang === 'ja' ? '音楽' : 'Music'}
          </h3>
          <p>{lang === 'ja' ? '演奏：' : 'Play: '}{interests.music.join('、')}</p>
          <p class="mt-2">{lang === 'ja' ? '好きなアーティスト：' : 'Favorite Artists: '}</p>
          <p class="text-sm">{interests.artists.join('、')}</p>
        </div>
        <div class="interest-card">
          <h3 class="interest-title">
            <Icon name="heroicons:user-group" class="interest-icon" />
            {lang === 'ja' ? '活動' : 'Activities'}
          </h3>
          <p>{interests.activities.join('、')}</p>
        </div>
      </div>
      <div class="music-quote">
        <p>{lang === 'ja' ? '「音楽は聞くものじゃなく自分でやるもの」' : '"Music is not just for listening, but for playing yourself"'}</p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
      <h2 class="section-title">
        <Icon name="heroicons:envelope" class="title-icon" />
        {lang === 'ja' ? 'お問い合わせ' : 'Contact'}
      </h2>
      <div class="contact-content">
        <p>{lang === 'ja' ? 'お気軽にご連絡ください！' : 'Feel free to reach out!'}</p>
        <div class="contact-methods">
          <a href="/contact" class="contact-button primary">
            <Icon name="heroicons:chat-bubble-left-right" class="button-icon" />
            {lang === 'ja' ? 'お問い合わせフォーム' : 'Contact Form'}
          </a>
          <a href="mailto:semiramisuweb3@gmail.com" class="contact-button secondary">
            <Icon name="heroicons:envelope" class="button-icon" />
            semiramisuweb3@gmail.com
          </a>
        </div>
      </div>
    </section>

    <!-- Thanks Section -->
    <section class="thanks-section">
      <h2 class="section-title">
        <Icon name="heroicons:sparkles" class="title-icon" />
        Special Thanks
      </h2>
      <div class="thanks-list">
        <div class="thanks-item">
          <a href="https://github.com/amehime/hexo-theme-shoka" target="_blank">
            Hexo Shoka theme - for design inspiration
          </a>
        </div>
        <div class="thanks-item">
          <a href="https://github.com/saicaca/fuwari" target="_blank">
            Astro Fuwari template - for main design concept
          </a>
        </div>
      </div>
    </section>
  </div>
</MainLayout>

<style>
  .about-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Hero Section */
  .hero-section {
    margin-bottom: 4rem;
  }

  .profile-card {
    @apply flex flex-col md:flex-row items-center md:items-start gap-8 p-8 rounded-2xl;
    background: var(--card-color);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .avatar-container {
    position: relative;
  }

  .avatar {
    @apply w-32 h-32 md:w-40 md:h-40 rounded-full object-cover border-4;
    border-color: var(--primary-color);
  }

  .status-badge {
    @apply absolute bottom-2 right-2 px-3 py-1 rounded-full text-xs font-medium flex items-center gap-1;
    background: var(--primary-color);
    color: white;
  }

  .status-dot {
    @apply w-2 h-2 rounded-full bg-white animate-pulse;
  }

  .profile-info {
    @apply flex-1 text-center md:text-left;
  }

  .profile-name {
    @apply text-3xl md:text-4xl font-bold mb-2;
    color: var(--text-color);
  }

  .profile-title {
    @apply text-xl text-[var(--text-color-lighten)] mb-4;
  }

  .profile-bio {
    @apply text-base leading-relaxed mb-4;
    color: var(--text-color);
  }

  .profile-meta {
    @apply flex flex-wrap justify-center md:justify-start gap-4 mb-4;
  }

  .meta-item {
    @apply flex items-center gap-1 text-sm text-[var(--text-color-lighten)];
  }

  .icon {
    @apply w-4 h-4;
  }

  .social-links {
    @apply flex justify-center md:justify-start gap-3;
  }

  .social-link {
    @apply p-2 rounded-full bg-[var(--bg-color)] hover:bg-[var(--primary-color)] transition-all;
  }

  .social-icon {
    @apply w-6 h-6;
    color: var(--text-color);
  }

  .social-link:hover .social-icon {
    color: white;
  }

  /* Section Styles */
  section {
    margin-bottom: 4rem;
  }

  .section-title {
    @apply text-2xl font-bold mb-6 flex items-center gap-2;
    color: var(--text-color);
  }

  .title-icon {
    @apply w-6 h-6;
    color: var(--primary-color);
  }

  /* Skills Section */
  .skills-grid {
    @apply grid grid-cols-1 md:grid-cols-2 gap-6;
  }

  .skill-category {
    @apply p-6 rounded-xl;
    background: var(--card-color);
  }

  .category-title {
    @apply text-lg font-semibold mb-3;
    color: var(--text-color);
  }

  .skill-tags {
    @apply flex flex-wrap gap-2;
  }

  .skill-tag {
    @apply px-3 py-1 rounded-full text-sm font-medium;
  }

  .skill-tag.research {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .skill-tag.programming {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .skill-tag.framework {
    background: rgba(168, 85, 247, 0.1);
    color: #a855f7;
  }

  .skill-tag.tool {
    background: rgba(251, 146, 60, 0.1);
    color: #fb923c;
  }

  /* Timeline Section */
  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0.5rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--border-color);
  }

  .timeline-item {
    position: relative;
    margin-bottom: 2rem;
  }

  .timeline-dot {
    position: absolute;
    left: -1.5rem;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background: var(--primary-color);
    box-shadow: 0 0 0 4px var(--bg-color);
  }

  .timeline-content {
    @apply p-4 rounded-lg;
    background: var(--card-color);
  }

  .timeline-year {
    @apply text-sm font-semibold text-[var(--primary-color)];
  }

  .timeline-event {
    @apply mt-1 text-[var(--text-color)];
  }

  /* Publications Section */
  .pub-category {
    margin-bottom: 2rem;
  }

  .pub-title {
    @apply text-lg font-semibold mb-3;
    color: var(--text-color);
  }

  .pub-list {
    @apply space-y-3;
  }

  .pub-item {
    @apply p-4 rounded-lg border border-[var(--border-color)] hover:shadow-md transition-all;
    background: var(--card-color);
  }

  .pub-link {
    @apply block;
  }

  .pub-name {
    @apply text-base font-medium mb-2 hover:text-[var(--primary-color)] transition-colors;
    color: var(--text-color);
  }

  .pub-meta {
    @apply flex justify-between text-sm text-[var(--text-color-lighten)];
  }

  .pub-year {
    @apply font-semibold;
  }

  /* Interests Section */
  .interests-grid {
    @apply grid grid-cols-1 md:grid-cols-3 gap-4 mb-4;
  }

  .interest-card {
    @apply p-6 rounded-xl;
    background: var(--card-color);
  }

  .interest-title {
    @apply text-lg font-semibold mb-3 flex items-center gap-2;
    color: var(--text-color);
  }

  .interest-icon {
    @apply w-5 h-5;
    color: var(--primary-color);
  }

  .music-quote {
    @apply text-center p-6 rounded-xl mt-4;
    background: var(--card-color);
    font-style: italic;
    color: var(--text-color);
  }

  /* Contact Section */
  .contact-content {
    @apply text-center;
  }

  .contact-methods {
    @apply flex flex-col md:flex-row gap-4 justify-center mt-4;
  }

  .contact-button {
    @apply inline-flex items-center justify-center gap-2 px-6 py-3 rounded-full font-medium transition-all;
  }

  .button-icon {
    @apply w-5 h-5;
  }

  .contact-button.primary {
    background: var(--primary-color);
    color: white;
  }

  .contact-button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(var(--primary-color-rgb), 0.3);
  }

  .contact-button.secondary {
    background: var(--card-color);
    color: var(--text-color);
    border: 2px solid var(--border-color);
  }

  .contact-button.secondary:hover {
    border-color: var(--primary-color);
    color: var(--primary-color);
  }

  /* Thanks Section */
  .thanks-list {
    @apply space-y-2;
  }

  .thanks-item a {
    @apply text-[var(--primary-color)] hover:underline;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .about-container {
      padding: 1rem 0.5rem;
    }

    section {
      margin-bottom: 3rem;
    }
  }
</style>