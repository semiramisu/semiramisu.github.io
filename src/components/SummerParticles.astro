---
// Summer-themed particle effect component
// Creates floating particles that look like sunlight rays and summer elements
---

<div class="summer-particles-container">
  <div class="summer-particles">
    <div class="particle sun-ray"></div>
    <div class="particle sun-ray"></div>
    <div class="particle sun-ray"></div>
    <div class="particle sun-ray"></div>
    <div class="particle sun-ray"></div>
    <div class="particle sun-sparkle"></div>
    <div class="particle sun-sparkle"></div>
    <div class="particle sun-sparkle"></div>
    <div class="particle sun-sparkle"></div>
    <div class="particle sun-sparkle"></div>
    <div class="particle sun-sparkle"></div>
    <div class="particle sun-sparkle"></div>
  </div>
</div>

<style>
  .summer-particles-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .summer-particles {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .particle {
    position: absolute;
    pointer-events: none;
    opacity: 0;
    animation-fill-mode: both;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
  }

  .sun-ray {
    width: 2px;
    height: 20px;
    background: linear-gradient(
      to bottom,
      rgba(251, 191, 36, 0.8),
      rgba(251, 191, 36, 0)
    );
    animation: float-up 4s infinite, fade-in-out 4s infinite;
  }

  .sun-sparkle {
    width: 4px;
    height: 4px;
    background: radial-gradient(
      circle,
      rgba(252, 211, 77, 0.9),
      rgba(252, 211, 77, 0)
    );
    border-radius: 50%;
    animation: float-diagonal 6s infinite, twinkle 3s infinite;
  }

  /* Floating animation for sun rays */
  @keyframes float-up {
    0% {
      transform: translateY(100vh) translateX(0);
      opacity: 0;
    }
    10% {
      opacity: 0.8;
    }
    90% {
      opacity: 0.4;
    }
    100% {
      transform: translateY(-100px) translateX(10px);
      opacity: 0;
    }
  }

  /* Diagonal floating for sparkles */
  @keyframes float-diagonal {
    0% {
      transform: translate(0, 100vh) rotate(0deg);
      opacity: 0;
    }
    10% {
      opacity: 0.9;
    }
    90% {
      opacity: 0.3;
    }
    100% {
      transform: translate(50px, -100px) rotate(360deg);
      opacity: 0;
    }
  }

  /* Fade in/out animation */
  @keyframes fade-in-out {
    0%, 100% {
      opacity: 0;
    }
    50% {
      opacity: 0.8;
    }
  }

  /* Twinkle animation for sparkles */
  @keyframes twinkle {
    0%, 100% {
      opacity: 0.3;
      transform: scale(0.8);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
  }

  /* Position particles randomly */
  .particle:nth-child(1) {
    left: 10%;
    animation-delay: 0s;
    animation-duration: 5s;
  }

  .particle:nth-child(2) {
    left: 25%;
    animation-delay: 1s;
    animation-duration: 6s;
  }

  .particle:nth-child(3) {
    left: 40%;
    animation-delay: 2s;
    animation-duration: 4s;
  }

  .particle:nth-child(4) {
    left: 60%;
    animation-delay: 0.5s;
    animation-duration: 7s;
  }

  .particle:nth-child(5) {
    left: 80%;
    animation-delay: 1.5s;
    animation-duration: 5s;
  }

  .particle:nth-child(6) {
    left: 15%;
    animation-delay: 3s;
    animation-duration: 8s;
  }

  .particle:nth-child(7) {
    left: 35%;
    animation-delay: 4s;
    animation-duration: 6s;
  }

  .particle:nth-child(8) {
    left: 55%;
    animation-delay: 2.5s;
    animation-duration: 7s;
  }

  .particle:nth-child(9) {
    left: 75%;
    animation-delay: 5s;
    animation-duration: 5s;
  }

  .particle:nth-child(10) {
    left: 90%;
    animation-delay: 3.5s;
    animation-duration: 6s;
  }

  .particle:nth-child(11) {
    left: 20%;
    animation-delay: 6s;
    animation-duration: 4s;
  }

  .particle:nth-child(12) {
    left: 70%;
    animation-delay: 1s;
    animation-duration: 8s;
  }

  /* Respect user preferences for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .particle {
      animation: none !important;
      opacity: 0 !important;
    }
  }

  /* Reduce particles on mobile for performance */
  @media (max-width: 768px) {
    .particle:nth-child(n+7) {
      display: none;
    }
  }
</style>